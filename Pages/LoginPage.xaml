<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OficinaApp.Pages.LoginPage"
             NavigationPage.HasNavigationBar="false"
             Title="LoginPage">
  
  <StackLayout 
    VerticalOptions="CenterAndExpand"
    Padding="20, 0">
    <Label 
      Text="Login"
      FontSize="20"
      VerticalOptions="Center" 
      HorizontalOptions="Center" />

    <Label
      Text="E-mail"
      FontSize="16"
      FontAttributes="Bold"/>
    <Entry
      Placeholder="Digite o seu E-mail"
      x:Name="txtEmail" />

    <Label
      Text="Senha"
      FontSize="16"
      FontAttributes="Bold"/>
      <Entry
        Placeholder="Digite sua Senha"
        x:Name="txtSenha" />

    <Button
      Text="Entrar"
      x:Name="btnEntrar"
      FontSize="16"
      FontAttributes="Bold"
      Margin="0, 16"
      Clicked="btnEntrar_Clicked" />
    <Button
      Text="Registre-se"
      x:Name="btnRegistrar"
      FontSize="16"
      FontAttributes="Bold"
      Clicked="btnRegistrar_Clicked" />

  </StackLayout>
</ContentPage>